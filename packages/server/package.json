{
  "name": "mr-noodles-server",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run build-assets && npm run build-ts",
    "build-ts": "tsc -p tsconfig.build.json",
    "build-assets": "ts-node ./scripts/copyStaticAssets.ts",
    "lint": "prettier . -c && eslint . && tsc --noEmit",
    "serve": "node dist/api/index.js",
    "populate": "ts-node scripts/populate.ts",
    "drop-db": "ts-node scripts/dropDb.ts",
    "migrate-db": "ts-node scripts/migrate.ts",
    "scan-now": "ts-node scripts/scanNow.ts",
    "start": "npm run serve",
    "watch-serve": "nodemon dist/api/index.js",
    "watch-ts": "tsc -w -p tsconfig.build.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-serve\""
  },
  "devDependencies": {
    "@types/async": "3.2.24",
    "@types/body-parser": "1.19.5",
    "@types/cors": "2.8.17",
    "@types/exif": "0.6.5",
    "@types/express": "4.17.21",
    "@types/lusca": "1.7.4",
    "@types/uuid": "9.0.7"
  },
  "dependencies": {
    "@noodlestan/shared-types": "0.0.1",
    "async": "3.2.5",
    "body-parser": "1.20.2",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "exif": "0.6.0",
    "express": "4.18.2",
    "lusca": "1.7.0",
    "sharp": "0.33.0",
    "uuid": "9.0.1",
    "winston": "3.11.0",
    "winston-transport": "4.6.0"
  }
}
